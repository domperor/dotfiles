[core]
	sparsecheckout = true
	pager =
[user]
	name = Koki Takahashi
	email = hakatasiloving@gmail.com
[color]
	ui = always
[push]
	default = simple
	followTags = true
[alias]
	diff = diff --color-words --word-diff-regex='\\w+|[^[:space:]]' --ignore-space-change
	wdiff = diff --word-diff --ignore-space-change
	cdiff = diff --cached --ignore-space-change
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
